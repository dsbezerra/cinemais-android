<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/error_icon_width"
        android:layout_height="@dimen/error_icon_height"
        android:contentDescription="@null"
        />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:text="Sem conexÃ£o"
        style="@style/TextAppearance.Cinemais.Subhead"
        />

    <TextView
        android:id="@+id/text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:gravity="center"
        android:paddingEnd="@dimen/spacing_large"
        android:paddingStart="@dimen/spacing_large"
        android:textAlignment="center"
        tools:text="Uma mensagem de erro."
        style="@style/TextAppearance.Cinemais.Body"
        />

</LinearLayout>